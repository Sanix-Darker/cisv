# Include documentation
include LICENSE
include README.md

# Include built shared libraries (if any)
recursive-include cisv/libs *.so *.dylib *.dll

# Include the C source code for building from source
graft core
prune core/build
prune core/build-asan

# Include makefiles
include core/Makefile

# Exclude compiled objects
global-exclude *.o
global-exclude *.a
global-exclude *.pyc
global-exclude __pycache__
